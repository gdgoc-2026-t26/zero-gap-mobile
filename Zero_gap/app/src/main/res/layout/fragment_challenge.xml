<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:fitsSystemWindows="true"
    tools:context="gdg.mobile.zero_gap.ui.ChallengeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마인드 챌린지"
                android:textColor="@color/slate_900"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Content Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#111827">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="오늘의 멘탈 에너지" android:textColor="#9CA3AF" android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="75% 안정적임" android:textColor="@color/white" android:textSize="22sp" android:textStyle="bold" android:layout_marginTop="4dp"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:progress="75"
                        app:trackColor="#1F2937"
                        app:indicatorColor="@color/white"
                        app:trackThickness="8dp"
                        app:trackCornerRadius="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="취업 준비로 지친 마음을 돌보는 2026.02의 여정입니다. 오늘도 당신은 충분히 잘하고 있어요."
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tabs/List -->
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@color/slate_900"
                app:tabSelectedTextColor="@color/slate_900"
                app:tabTextColor="@color/slate_500"
                app:tabMode="fixed">
                <com.google.android.material.tabs.TabItem android:text="참여 중" />
                <com.google.android.material.tabs.TabItem android:text="탐색" />
            </com.google.android.material.tabs.TabLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:orientation="vertical">
                <include layout="@layout/item_challenge" />
                <include layout="@layout/item_challenge" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
