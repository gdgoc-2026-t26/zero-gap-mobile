<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="gdg.mobile.zero_gap.ui.HomeFragment"
        android:label="홈"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_diary"
            app:destination="@id/navigation_diary"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/navigation_challenge"
        android:name="gdg.mobile.zero_gap.ui.ChallengeFragment"
        android:label="챌린지"
        tools:layout="@layout/fragment_challenge" />

    <fragment
        android:id="@+id/navigation_diary"
        android:name="gdg.mobile.zero_gap.ui.DiaryFragment"
        android:label="일기"
        tools:layout="@layout/fragment_diary" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="gdg.mobile.zero_gap.ui.ReportFragment"
        android:label="달력"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/navigation_my"
        android:name="gdg.mobile.zero_gap.ui.MyFragment"
        android:label="마이"
        tools:layout="@layout/fragment_my" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="gdg.mobile.zero_gap.ui.auth.LoginFragment"
        android:label="로그인"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/navigation_signup" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_signup"
        android:name="gdg.mobile.zero_gap.ui.auth.SignupFragment"
        android:label="회원가입"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/navigation_login" />
    </fragment>

</navigation>
